# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
quote_type = single
trailing_comma = none

[*.md]
trim_trailing_whitespace = false

[*.{css,less,scss}]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.{js,jsx,json,ts,tsx}]
indent_style = space
indent_size = 2
